<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" MinHeight="500" MinWidth="800"
        Background="#FF0F1B2E">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF1A2B44" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="Погода на" FontSize="20" Foreground="#FF8FA3C2"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <ComboBox SelectionChanged="SelectDay" 
                                  Name="Days" 
                                  Width="200" 
                                  Height="30" 
                                  Background="White"
                                  Foreground="Black"
                                  BorderBrush="#FF3A4B64"
                                  VerticalAlignment="Center">
                        </ComboBox>

                        <Button Content="Обновить" 
                                Click="UpdateWeather" 
                                Width="100" 
                                Height="30" 
                                Margin="15,0,0,0" 
                                Background="#FF2A7BDE" 
                                Foreground="White"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#FF142031" Padding="10,5">
            <Grid x:Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Время" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Погода" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Осадки" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="Влажность" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="parent" Margin="10"/>
        </ScrollViewer>
    </Grid>
</Window>